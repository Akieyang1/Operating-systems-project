# 创建 pcron 相关目录
sudo mkdir -p /etc/pcron
sudo touch /etc/pcrontab
sudo chmod 777 /etc/pcron/

# 创建日志文件
sudo mkdir -p /var/log
sudo touch /var/log/pcron
sudo chmod 444 /var/log/pcron

# 创建权限文件
sudo touch /etc/pcron.allow
# sudo touch /etc/pcron.deny

# 添加应用程序
cp ./pcron /usr/local/bin/
cp ./pcrontab /usr/local/bin/
